<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.holomedia.holomedia.AboutActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:layout_alignParentStart="true"
            android:theme="@android:style/Theme.DeviceDefault.Settings" />
    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:id="@+id/activity_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/about_wall"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:theme="@style/Base.AlertDialog.AppCompat"
        tools:context="com.example.ioann_000.cainstructionquiz.AboutActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignStart="@+id/date_and_reservedTxtView"
            android:layout_below="@+id/HolomediaTxt"
            android:layout_marginTop="40dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/HolomediaTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="HoloMedia"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/lessonTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/date_and_reservedTxtView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginBottom="11dp"
            android:text="For the lesson Multimedia Technology."
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/infoTxtView"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:layout_above="@+id/lessonTxtView"
            android:layout_alignEnd="@+id/lessonTxtView"
            android:text=" Programmers: \n Βαριοζίδης Γιάννης (141065),\n Ψύλλα Κατερίνα (141016 )\n Version:1.0.0 "
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/date_and_reservedTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:text="2017-2018.  All rights reserved"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold" />

    </RelativeLayout>


</RelativeLayout>


