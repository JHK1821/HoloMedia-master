<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/holo_bg_main">


    <Button
        android:id="@+id/search_button"

        android:layout_width="150dp"
        android:layout_height="200dp"

        android:layout_alignEnd="@+id/txt_view1"
        android:layout_centerVertical="true"
        android:layout_marginEnd="60dp"
        android:background="@drawable/search_icon3"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="233dp" />

    <TextView
        android:id="@+id/txt_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="@string/choose_your_action"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="25dp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:background="@color/colorAccent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-41dp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/down_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible"
        app:menu="@menu/down_menu" />


</RelativeLayout>