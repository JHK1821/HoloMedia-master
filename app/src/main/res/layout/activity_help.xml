<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/help_wall"
    android:fitsSystemWindows="true"
    tools:context="com.holomedia.holomedia.HelpActvity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <Button
        android:id="@+id/hp_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/watch_button"
        android:text="Play" />


    <Button
        android:id="@+id/cont_button"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_below="@+id/hp_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:background="@drawable/watch_button"
        android:text="Contact Us" />

    <Button
        android:id="@+id/don_button"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:background="@drawable/watch_button"
        android:text="Donate" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="45dp"
        android:fontFamily="serif"
        android:text="Welcome to our manual, users are advised to view the video below, in order to create a hologram video eligible to our app. "
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp" />


</RelativeLayout>


